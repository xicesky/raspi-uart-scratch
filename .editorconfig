# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
end_of_line = lf
charset = utf-8
indent_style = space
indent_size = 4

[*.py]
trim_trailing_whitespace = true
insert_final_newline = true

[*.{js,json,yaml,yml}]
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true

[*.rs]
max_line_length = 100
trim_trailing_whitespace = true
insert_final_newline = true

[Makefile]
indent_style = tab
trim_trailing_whitespace = true
insert_final_newline = true
